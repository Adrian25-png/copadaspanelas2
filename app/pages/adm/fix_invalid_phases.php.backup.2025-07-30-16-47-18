        th { background-color: #f8f9fa; font-weight: bold; }
        .status-completa { color: #28a745; font-weight: bold; }
        .status-incompleta { color: #dc3545; font-weight: bold; }
        .fase-invalida { background-color: #ffebee; }
    </style>
